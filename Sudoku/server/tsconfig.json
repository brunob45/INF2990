{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceRoot": "app",
    "outDir": "out",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
	  "noImplicitThis": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ]
  },
  "include": [
        "app/**/*",
        "app/*"
  ]
}
